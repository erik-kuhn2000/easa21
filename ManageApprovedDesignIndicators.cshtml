@page
@model ManageApprovedDesignIndicatorsModel
@{
    ViewData["Title"] = "Manage Approved Design Indicators";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="page-title">@ViewData["Title"]</h1>
        <div>
        </div>
    </div>
    <p class="subtitle">Add and delete approved deign indicators available in the application's dropdown lists.</p>

    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-plus btn-icon me-2"></i>Add New Approved Design Indicator</h5>
        </div>
        <div class="card-body">
            <form id="addApprovedForm" method="post" onsubmit="addApprovedItem(event);">
                @Html.AntiForgeryToken()
                <div class="row g-2 align-items-end">
                    <div class="col">
                        <label for="newApprovedItemInput" class="form-label">Approved Design Indicator<span class="error-star" style="color: red;">*</span></label>
                        <input type="text" id="newApprovedItemInput" asp-for="NewApprovedDesignIndicator" class="form-control mandatory" placeholder="Enter Approved Design Indicator" maxlenght="40" requried>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-plus me-2"></i>Add
                        </button>
                    </div>
                </div>
                <small class="text-muted"><span class="error-star" style="color: red;">*</span> Field is mandatory</small>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-check-circle btn-icon me-2"></i>Current Approved Design Indicators</h5>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-end align-items-center mb-3">
                <div>
                    <button type="button" class="btn btn-sm btn-secondary me-2" onclick="deselectAllApprovedItems()"><i class="fas fa-eraser me-2"></i>Clear Selection</button>
                    <button type="button" class="btn btn-sm btn-primary" onclick="showDeleteConfirmation()">
                        <i class="fas fa-trash me-2"></i>Delete Selected
                    </button>
                </div>
            </div>

            <form id="deleteApprovedForm" method="post">
                @Html.AntiForgeryToken()
                <div id="approvedListContainer" class="border rounded p-3 bg-white" style="min-height: 200px; max-height: 500px; overflow-y: auto;">
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDeleteApprovedModal" tabindex="-1" aria-labelledby="confirmDeleteApprovedModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteApprovedModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <strong>You are about to delete approved design indicator entries.</strong><br />
                This action is not reversible.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="fas fa-xmark me-2"></i>Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmDeleteApprovedBtn">
                    <i class="fas fa-check me-2"></i>Confirm
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // --- UTILITY FUNCTIONS ---
        function showSuccessMessage(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-success alert-dismissible fade show position-fixed';
            alert.style.cssText = 'bottom: 10px; left: 50%; transform: translateX(-50%); z-index: 9999; min-width: 300px;';
            alert.innerHTML = `<i class="fas fa-check-circle me-2"></i> ${message}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;
            document.body.appendChild(alert);
            setTimeout(() => bootstrap.Alert.getOrCreateInstance(alert)?.close(), 5000);
        }

        function showErrorMessage(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-danger alert-dismissible fade show position-fixed';
            alert.style.cssText = 'bottom: 10px; left: 50%; transform: translateX(-50%); z-index: 9999; min-width: 300px;';
            alert.innerHTML = `<i class="fas fa-exclamation-circle me-2"></i> ${message}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;
            document.body.appendChild(alert);
            setTimeout(() => bootstrap.Alert.getOrCreateInstance(alert)?.close(), 8000);
        }

        // --- PAGE-SPECIFIC LOGIC ---
                      function renderApprovedItems(items) {
            const container = document.getElementById('approvedListContainer');
            if (!items || items.length === 0) {
                container.innerHTML = '<p class="text-muted text-center m-0">No approved items found.</p>';
                return;
            }

            let html = '<div class="row">';
            items.forEach((item, i) => {
                html += `
                    <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-2">
                        <div class="form-check">
                           
                            <input class="form-check-input approved-checkbox" type="checkbox" name="SelectedApprovedDesignIndicators" value="${item}" id="approved_${i}">
                            <label class="form-check-label" for="approved_${i}">${item}</label>
                        </div>
                    </div>`;
            });
            container.innerHTML = html + '</div>';
        }

        function loadApprovedItems() {
            const container = document.getElementById('approvedListContainer');
            container.innerHTML = `<div class="text-center p-5"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div>`;

            fetch('@Url.Page("", "List")')
                .then(response => {
                    if (!response.ok) throw new Error("Network response was not ok");
                    return response.json();
                })
                .then(data => {
                    renderApprovedItems(data);
                })
                .catch(error => {
                    console.error('Error loading approved design indicators:', error);
                    container.innerHTML = '<p class="text-danger text-center m-0">Error loading approved items.</p>';
                    showErrorMessage('Could not refresh the list of approved items.');
                });
        }

        function addApprovedItem(event) {
            event.preventDefault();
            const input = document.getElementById('newApprovedItemInput');
            const item = input.value.trim();
            if (!item) {
                input.classList.add('is-invalid');
                showErrorMessage('Please enter an approved design indicator.');
                return;
            }
            input.classList.remove('is-invalid');

            const form = document.getElementById('addApprovedForm');
            const formData = new FormData(form);

            fetch('@Url.Page("", "Add")', { method: 'POST', body: formData })
                .then(r => r.json())
                .then(d => {
                    if (d.success) {
                        showSuccessMessage(d.message);
                        input.value = '';
                        loadApprovedItems(); // Refresh the list
                    } else {
                        showErrorMessage(d.message);
                        input.classList.add('is-invalid');
                    }
                })
                .catch(e => {
                    console.error('Error adding approved design indicator:', e);
                    showErrorMessage('An error occurred while adding the approved design indicator.');
                });
        }

        function showDeleteConfirmation() {
            const selected = document.querySelectorAll('.approved-checkbox:checked');
            if (selected.length === 0) {
                showErrorMessage('Please select at least one approved design indicator to delete.');
                return;
            }
            const confirmModal = new bootstrap.Modal(document.getElementById('confirmDeleteApprovedModal'));
            confirmModal.show();
        }

        function deleteSelectedApprovedItems() {
            const form = document.getElementById('deleteApprovedForm');
            const formData = new FormData(form);

            fetch('@Url.Page("", "Delete")', { method: 'POST', body: formData })
                .then(r => r.json())
                .then(d => {
                    if (d.success) {
                        showSuccessMessage(d.message);
                        loadApprovedItems(); // Refresh the list
                    } else {
                        showErrorMessage(d.message);
                    }
                })
                .catch(e => {
                    console.error('Error deleting approved design indicator:', e);
                    showErrorMessage('An error occurred while deleting approved design indicators.');
                })
                .finally(() => {
                    const confirmModal = bootstrap.Modal.getInstance(document.getElementById('confirmDeleteApprovedModal'));
                    confirmModal?.hide();
                });
        }

        function deselectAllApprovedItems() {
            document.querySelectorAll('.approved-checkbox').forEach(c => c.checked = false);
        }

        // --- INITIALIZATION ---
        document.addEventListener('DOMContentLoaded', function() {
            // The initial list is rendered from the model on the server.
            renderApprovedItems(@Html.Raw(Json.Serialize(Model.ApprovedDesignIndicators)));

            // Attach event listener for the delete confirmation button
            const confirmDeleteBtn = document.getElementById('confirmDeleteApprovedBtn');
            if (confirmDeleteBtn) {
                confirmDeleteBtn.addEventListener('click', deleteSelectedApprovedItems);
            }

            const newApprovedItemInput = document.getElementById('newApprovedItemInput');
            if (newApprovedItemInput) {
                // Add an event listener to remove the red border when the user starts typing
                newApprovedItemInput.addEventListener('input', () => {
                    if (newApprovedItemInput.classList.contains('is-invalid')) {
                        newApprovedItemInput.classList.remove('is-invalid');
                    }
                });
            }
        });
    </script>
}